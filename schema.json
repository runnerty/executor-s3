{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "@runnerty-executor-s3",
  "definitions": {
    "config": {
      "type": "object",
      "required": ["id", "type", "apiVersion", "accessKeyId", "secretAccessKey", "region"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "@runnerty-executor-s3"
        },
        "apiVersion": {
          "type": "string"
        },
        "accessKeyId": {
          "type": "string"
        },
        "secretAccessKey": {
          "type": "string"
        },
        "bucket": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "acl": {
          "type": "string",
          "enum": [
            "private",
            "public-read",
            "public-read-write",
            "authenticated-read",
            "aws-exec-read",
            "bucket-owner-read",
            "bucket-owner-full-control"
          ]
        },
        "region": {
          "type": "string"
        }
      }
    },
    "params": {
      "type": "object",
      "anyOf": [
        {
          "required": ["id", "local_file", "remote_file"],
          "properties": {
            "id": { "type": "string" },
            "local_file": { "type": "string" },
            "remote_file": { "type": "string" },
            "method": { "type": "string", "enum": ["upload", "download"] },
            "acl": {
              "type": "string",
              "enum": [
                "private",
                "public-read",
                "public-read-write",
                "authenticated-read",
                "aws-exec-read",
                "bucket-owner-read",
                "bucket-owner-full-control"
              ]
            },
            "bucket": { "type": "string" }
          }
        },
        {
          "required": ["id", "remote_path"],
          "properties": {
            "id": { "type": "string" },
            "remote_path": { "type": ["string", "array"] },
            "method": { "type": "string", "enum": ["delete"] },
            "bucket": { "type": "string" }
          }
        }
      ]
    }
  }
}
